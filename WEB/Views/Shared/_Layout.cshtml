<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
 
</head>
@RenderSection("Styles", required: false)
@RenderSection("Scripts", required: false)
<body>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Trang chủ</a>

        <div class="ms-auto">
            @if (Context.Session.GetString("UserName") != null)
            {
                <span class="me-3">Xin chào,  <a class="btn btn-outline-warning btn-sm me-2" href="@Url.Action("Profile", "UserProfile")"><b>@Context.Session.GetString("UserName")</b></a></span>
                @if (Context.Session.GetString("Role") == "Admin")
                {
                    <a class="btn btn-outline-warning btn-sm me-2" href="@Url.Action("Index", "Admin")">Admin</a>
                }

                <!-- Giỏ hàng có icon + badge -->
                <a class="btn btn-outline-warning btn-sm position-relative me-2" href="@Url.Action("Cart", "Carts")">
                    <i class="bi bi-cart"></i> Giỏ hàng
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @ViewBag.CartCount
                    </span>
                </a>

                <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Logout", "Home")">Đăng xuất</a>
            }
            else
            {
                <a class="btn btn-outline-primary btn-sm me-2" href="@Url.Action("Login", "Home")">Đăng nhập</a>
                <a class="btn btn-outline-success btn-sm" href="@Url.Action("Register", "Home")">Đăng ký</a>
            }
        </div>
    </nav>



    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
