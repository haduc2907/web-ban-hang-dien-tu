@model WEB.Models.PurchasedProductListViewModel
@using Entities

<div class="container mt-4">
    <h2>Quản lý đơn hàng</h2>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Người dùng</th>
                <th>Tên người dùng</th>
                <th>Sản phẩm</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Ngày mua</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PurchasedProducts)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserId</td>
                    <td>@item.UserName</td>
                    <td>@item.Name</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" style="width:60px;height:60px;" />
                    </td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("N0") VNĐ</td>
                    <td>@item.PurchasedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <span class="badge bg-info">@item.Status</span>
                    </td>
                    <td>
                        @if (item.Status == EOrderStatus.PendingConfirmation)
                        {
                            <form asp-action="UpdateStatus" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="status" value="@EOrderStatus.ToBeShipped" />
                                <button type="submit" class="btn btn-success btn-sm">Xác nhận</button>
                            </form>
                        }
                        else if (item.Status == EOrderStatus.ToBeShipped)
                        {
                            <form asp-action="UpdateStatus" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="status" value="@EOrderStatus.Delivered" />
                                <button type="submit" class="btn btn-primary btn-sm">Đã giao</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
