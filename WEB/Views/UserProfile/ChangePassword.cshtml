@model WEB.Models.ChangePaswordViewModel

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 600px; margin: auto;">
        <div class="card-body p-4">
            <h3 class="mb-4 text-center">Thay đổi mật khẩu</h3>

            <form asp-action="ChangePassword" method="post">
                <div class="mb-3">
                    <label asp-for="OldPassword" class="form-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReEnterPassword" class="form-label"></label>
                    <input asp-for="ReEnterPassword" class="form-control" />
                    <span asp-validation-for="ReEnterPassword" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">Lưu thay đổi</button>
                    <a asp-action="ChangePassword" class="btn btn-secondary px-4">Hủy</a>
                </div>
                <
            </form>
        </div>
    </div>
</div>
