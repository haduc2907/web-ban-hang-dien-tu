@using Entities
@model WEB.Models.ProductListViewModel

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int stt = 1;
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<h2>Danh sách sản phẩm</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Stt</th>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Số lượng</th>
            <th>Hình ảnh</th>
            <th>Giá</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
            <th>Danh mục</th>
            <th>Thương hiệu</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Products.Any())
        {
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@stt</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" style="width:100px; height:auto;" />
                    </td>
                    <td>@item.Price.ToString("N0") đ</td>
                    <td>
                        @if (item.Status == EStatusProduct.Available)
                        {
                            <span class="text-success">Còn hàng</span>
                        }
                        else
                        {
                            <span class="text-danger">Hết hàng</span>
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@item.UpdatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@(Model.Categories.FirstOrDefault(c => c.Id == item.CategoryId)?.Name ?? "Chưa có danh mục")</td>
                    <td>@item.Brand</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');">
                            Xóa</a>
                    </td>
                </tr>
                stt++;
            }
        }
        else
        {
            <tr>
                <td colspan="12" style="text-align:center;">Chưa có sản phẩm nào</td>
            </tr>
        }

    </tbody>
</table>

<a asp-action="Add" class="btn btn-success">Thêm sản phẩm</a>
