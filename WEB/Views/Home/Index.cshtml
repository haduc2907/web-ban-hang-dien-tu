@using Entities
@model WEB.Models.ProductListViewModel

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int stt = 1;
}

<div class="container mt-4">
    <div class="row">
        <!-- Danh mục -->
        <div class="col-md-3">
            <div class="category-list list-group">
                <a asp-action="Index" class="list-group-item list-group-item-action @(Context.Request.Query["categoryId"].Count == 0 ? "active" : "")">
                    Tất cả
                </a>
                @foreach (var cat in Model.Categories)
                {
                    <a asp-action="Index" asp-route-categoryId="@cat.Id"
                       class="list-group-item list-group-item-action @(Context.Request.Query["categoryId"].ToString() == cat.Id.ToString() ? "active" : "")">
                        @cat.Name
                    </a>
                }
            </div>
        </div>

        <!-- Danh sách sản phẩm -->
        <div class="col-md-9">
            <h2 class="mb-3">Danh sách sản phẩm</h2>

            <!-- Form tìm kiếm và lọc -->
            <form asp-action="Index" method="get" class="mb-3 row g-2">
                <input type="hidden" name="categoryId" value="@Context.Request.Query["categoryId"]" />

                <div class="col-md-3">
                    <input type="text" name="options.Keyword" value="@Context.Request.Query["options.Keyword"]"
                           class="form-control" placeholder="Tìm theo tên..." />
                </div>
                <div class="col-md-2">
                    <input type="number" name="options.MinPrice" value="@Context.Request.Query["options.MinPrice"]"
                           class="form-control" placeholder="Giá từ" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="options.MaxPrice" value="@Context.Request.Query["options.MaxPrice"]"
                           class="form-control" placeholder="Giá đến" />
                </div>
                <div class="col-md-2">
                    <input type="text" name="options.Brand" value="@Context.Request.Query["options.Brand"]"
                           class="form-control" placeholder="Thương hiệu" />
                </div>
                <div class="col-md-2">
                    <select name="options.Status" class="form-select">
                        <option value="">-- Trạng thái --</option>
                        <option value="Available" selected="@(Context.Request.Query["options.Status"] == "Available")">
                            Còn hàng
                        </option>
                        <option value="OutOfStock" selected="@(Context.Request.Query["options.Status"] == "OutOfStock")">
                            Hết hàng
                        </option>

                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">Lọc</button>
                </div>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Hình ảnh</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Products.Any())
                    {
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.Name" style="width:100px; height:auto;" />
                                </td>
                                <td>@item.Price.ToString("N0") đ</td>
                                <td>
                                    @if (item.Status == EStatusProduct.Available)
                                    {
                                        <span class="text-success">Còn hàng</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Hết hàng</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == EStatusProduct.Available)
                                    {
                                        <a asp-controller="Carts"
                                           asp-action="AddToCart"
                                           asp-route-productId="@item.Id"
                                           asp-route-userId="@Context.Session.GetString("UserId")"
                                           class="btn btn-warning btn-sm">
                                            Thêm vào giỏ hàng
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>Hết hàng</button>
                                    }
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Chi tiết</a>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" style="text-align:center;">Chưa có sản phẩm nào</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- PHÂN TRANG -->
            @if (Model != null && Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">

                        <!-- Nút Previous -->
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-categoryId="@Context.Request.Query["categoryId"]"
                               asp-route-options.Keyword="@Context.Request.Query["options.Keyword"]"
                               asp-route-options.MinPrice="@Context.Request.Query["options.MinPrice"]"
                               asp-route-options.MaxPrice="@Context.Request.Query["options.MaxPrice"]"
                               asp-route-options.Brand="@Context.Request.Query["options.Brand"]"
                               asp-route-options.Status="@Context.Request.Query["options.Status"]">
                                Trước
                            </a>
                        </li>
                        @{
                            int maxPagesToShow = 5;
                            int startPage = Math.Max(1, Model.CurrentPage - maxPagesToShow / 2);
                            int endPage = Math.Min(Model.TotalPages, startPage + maxPagesToShow - 1);

                            // Nếu cuối danh sách thiếu thì dịch startPage ngược lại
                            if ((endPage - startPage + 1) < maxPagesToShow)
                            {
                                startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                            }
                        }
                        <!-- Các số trang -->
                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-categoryId="@Context.Request.Query["categoryId"]"
                                   asp-route-options.Keyword="@Context.Request.Query["options.Keyword"]"
                                   asp-route-options.MinPrice="@Context.Request.Query["options.MinPrice"]"
                                   asp-route-options.MaxPrice="@Context.Request.Query["options.MaxPrice"]"
                                   asp-route-options.Brand="@Context.Request.Query["options.Brand"]"
                                   asp-route-options.Status="@Context.Request.Query["options.Status"]">
                                    @i
                                </a>
                            </li>
                        }

                        <!-- Nút Next -->
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-categoryId="@Context.Request.Query["categoryId"]"
                               asp-route-options.Keyword="@Context.Request.Query["options.Keyword"]"
                               asp-route-options.MinPrice="@Context.Request.Query["options.MinPrice"]"
                               asp-route-options.MaxPrice="@Context.Request.Query["options.MaxPrice"]"
                               asp-route-options.Brand="@Context.Request.Query["options.Brand"]"
                               asp-route-options.Status="@Context.Request.Query["options.Status"]">
                                Sau
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
